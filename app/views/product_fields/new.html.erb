<<div class = "container mt-5">
  <div class = "row">
    <div class = " col-md-6">
      <div class = "p-1">
       <h1>Add product form</h1>
  <br>
     <%= form_with(model:  @product_field ) do |form| %>
        <div class="form-group ">
        <%= form.label :field_name, class: "form-label"  %>
          <%= form.text_field :field_name, class:"form-control" ,placeholder: "Enter your field name"%>
        </div><br>

        <div class="form-group">
          <%= form.label :field_type, class: "form-label" %>
          <%= form.select :field_type,['integer' , 'boolean', 'float', 'bigint' , 'text' , 'string'], class:"form-control btn btn-outline-primary"%>
        </div><br>

        <div class="actions">
            <%= form.submit "Add product fields" , class: "btn btn-primary"%>
        </div>
     <%end%>
    </div>
  </div>
</div>