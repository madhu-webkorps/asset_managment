<div class="container mt-5">
 <div class="row">
    <div class="col-md-6">
    <% if user_signed_in? %>
    <h5>Username :  <%=current_user.email%></h5>
    <h5>User Id :  <%=current_user.id%></h5>
    
    <%end%>
    <br>
    <%= link_to 'Add Product field' , new_product_field_path , class: "btn btn-primary "%><br>
    <table class="table">
     <thead>
       <tr>
          <th>Field_Name</th>
          <th>Field_Type</th>
       <tr>
     </thead>
     <tbody>
        <%@product_field.each do |product|%>
          <tr>
            <td><%= product.field_name%></td>
            <td><%= product.field_type%></td>
            <td> <%= link_to 'Add Product' , new_product_path , class: "btn btn-primary "%></td>
   
          </tr>
        <%end%>
      </tbody>

    </table>
  </div>
</div>
</div>








